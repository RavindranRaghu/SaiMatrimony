@model SaiMatrimony.Models.ProfileDetails
@{
    ViewData["Title"] = "Home Page";
    string profileName = Model.ProfileId != 0 ? Model.FirstName + " " + Model.MiddleName +" " + Model.LastName  :  "No Profile Set";
    bool error = ViewBag.error;

}

<link rel="stylesheet" href="~/css/pagination.css">

<style>

    .paginationjs .paginationjs-pages ul {
        margin: auto;
        padding-left: 23px;
    }
    .paginationjs .paginationjs-pages li.active > a {
        background-color:crimson;
    }


    #about .badge {
        background-color:crimson;
        color:white;
    }

    .section-title h2{
        color:hotpink;
    }

    #contact {
        background-color:none;
    }

</style>

<!-- PRE LOADER -->
<section class="preloader">
    <div class="spinner">
        <span class="spinner-rotate"></span>
    </div>
</section>




<!-- HOME -->
<section id="home" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">

            <div class="col-md-6 col-sm-12">
                <div class="home-info">
                    <!--<a href="#about" class="btn section-btn smoothScroll">Start a project</a>
                    <span>
                         CALL US (+66) 010-020-0340
                         <small>For any inquiry</small>
                    </span>-->
                </div>
            </div>

            <div class="col-md-6 col-sm-12">
                <div class="home-video">
                    <div id="search-pane" style="background:linear-gradient(to right, #434343, #000000);padding:15px;">
                        <!--<iframe src="https://www.youtube.com/embed/AqcjdkPMPJA" frameborder="0" allowfullscreen></iframe>-->

                        <div class="media blog-thumb" style="height:400px;">
                            <h4 style="padding:10px;">Notification <i class="fa fa-bell"></i></h4>
                            <div class="media-body blog-info" style="padding:25px 25px;">                                
                                <h3><a href="~/home/profile?id=@Model.ProfileUserId" style="color:crimson;">Profile : @profileName </a></h3>
