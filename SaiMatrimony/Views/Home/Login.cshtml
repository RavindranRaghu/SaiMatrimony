        function existingUser(){
            var eud = $("#eud").val();
            var epd = $("#epd").val();
            var detail = {eud: eud, epd: epd };
            $.ajax({
                url:'/home/getInExisting/',
                type: 'POST',
                data : JSON.stringify(detail),
                contentType : 'application/json; charset:utf-8',
                dataType:'json',
                success: function (data) {
                    console.log(data);
                    if (data.success == "y") {
                        window.location.href = nav;
                    }
                    else {
                        $("#msg").html(data.msg);
