        function validateEmail(email)
        {
            var re = /^([\w-\.]+\u0040([\w-]+\.)+[\w-]{2,4})?$/;
            if (re.test(email)){
                return (true);
            }
            return (false);
        }
        function validatePhone(phone)
        {
            var re = /^[\+]?[(]?[0-9]{3}[)]?[-\s\.]?[0-9]{3}[-\s\.]?[0-9]{1,6}$/im;
